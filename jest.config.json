{
  "testRegex": "(/__tests__/.*|(\\.|/*.)(spec|test))\\.js?$",
  "globals": {
    "__PRODUCTION__": true,
    "__DEV__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__BACKEND_ROOT_URL__": true,
    "__PRERELEASE__": true
},
  "setupFilesAfterEnv": ["<rootDir>/jest_config/setupTests.js"],
  "collectCoverageFrom": [
    "src/**/*.js", 
    "src/**/*.jsx",
    "!src/store.js", 
    "!src/middleware/logger.js", 
    "!src/enhancers/monitorReducer.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": -10
    }
  },
  "moduleDirectories": ["node_modules", "src"],
  "transform": {
    "^.+\\.(js|jsx)$": "babel-jest"
  },
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/jest_config/__mocks__/fileMock.js",
    "\\.(css|less|scss)$": "<rootDir>/jest_config/__mocks__/styleMock.js",
    "^@/(.*)$": "<rootDir>/src/$1"
  }
}
